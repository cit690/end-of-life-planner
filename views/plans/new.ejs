<main>
  <h1><%= title %> </h1>
  <form action="/plans" method="post">
    <label>
      Name: 
      <input type="text" name="name">
    </label><br>
    <label>
      Date of Birth:
      <input type="date" name="dateOfBirth">
    </label><br>
    <label>
      Location:
      <input type="text" name="location">
    </label><br>
    <label>
      Next of Kin:
      <input type="text" name="nextOfKin">
    </label><br>
    <label for="">Durable Power of Attorney:
      <input type="text" name="powerOfAttorney">
    </label><br>
    <label for="dnr-checkbox">
      Do Not Resuscitate?:
      <input type="checkbox" name="dnr">
    </label><br>
    <button type="submit">Add Death Plan</button>
  </form>
</main>

