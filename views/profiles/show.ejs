<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/style.css">
<%- include('../partials/nav') %>

<section>
  <h1><%= title %> </h1>

  <ul>
    <% profile.deathPlans.forEach(deathPlan => { %> 
      <li>
        <a href="/plans/<%= deathPlan._id %>"><%= deathPlan.name %>, <%= deathPlan.location %></a>
      </li>
      <% if (isSelf) { %>
        <form action="/plans/<%= deathPlan._id %>?_method=DELETE" method="POST">
          <button>X</button>
        </form>
        <% } %> 
      
      <% }) %> 
    </ul>

  <% if (isSelf) { %>
    <h2>Create a <a href="/plans/new">New Death Plan</a></h2>
  <% } %> 
</section>

<%- include('../partials/footer') %>