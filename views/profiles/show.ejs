<link rel="stylesheet" href="/stylesheets/style.css">
<%- include('../partials/nav') %>

<section>
  <h1><%= title %> </h1>

  <ul>
    <% profile.deathPlans.forEach(plan => { %> 
      <li>
        <a href="/plans/<%= plan._id %>"><%= plan.name %>, <%= plan.location %></a>
      </li>
      <% }) %> 
    </ul>

  <% if (isSelf) { %>
    <h2>Create a <a href="/plans/new">New Death Plan</a></h2>
  <% } %> 
</section>

